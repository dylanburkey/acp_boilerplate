# Test Environment for Quick Deploy
# This configuration uses local mock servers for testing

# ========================================
# Core Configuration (Use test values)
# ========================================

GAME_API_KEY=test-game-api-key-123456789
WHITELISTED_WALLET_PRIVATE_KEY=0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
WHITELISTED_WALLET_ENTITY_ID=1
AGENT_WALLET_ADDRESS=0x742d35Cc6634C0532925a3b844Bc9e7595f6E123

# ========================================
# Service Configuration
# ========================================

SERVICE_NAME="Launch a trading agent"
SERVICE_DESCRIPTION="Quick deployment of an AI trading agent"

# Point to local mock server
API_ENDPOINT=http://localhost:4000/api/v1/secure/fundDetails/quick-deploy
API_KEY=test-api-key

# ========================================
# Quick Deploy Configuration
# ========================================

# Test factory contract (you'll need to update this with actual testnet address)
FACTORY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000001
PAYMENT_RECIPIENT_ADDRESS=0x742d35Cc6634C0532925a3b844Bc9e7595f6E456
USDC_CONTRACT_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
SERVICE_PRICE=50

# ========================================
# Notification Configuration (Local)
# ========================================

# Point callbacks to local mock server
KOSHER_CAPITAL_CALLBACK_URL=http://localhost:4000/webhooks/acp/deployment
KOSHER_CAPITAL_AUTH_METHOD=bearer
KOSHER_CAPITAL_CALLBACK_TOKEN=test-callback-token-123
KOSHER_CAPITAL_WEBHOOK_URL=http://localhost:4000/webhooks/acp/events

# Callback configuration
CALLBACK_MAX_RETRIES=3
CALLBACK_TIMEOUT=5000
TRANSACTION_LOG_DIR=./test-logs

# ========================================
# Status API Configuration
# ========================================

STATUS_API_ENABLED=true
STATUS_API_PORT=3001

# ========================================
# ACP Configuration (Testnet)
# ========================================

# For testing, you might want to use Sepolia testnet
# Uncomment and update these for testnet testing:
# ACP_RPC_URL=https://sepolia.infura.io/v3/YOUR-INFURA-KEY
# ACP_CHAIN_ID=11155111
# ACP_CONTRACT_ADDRESS=0xTESTNET-ACP-CONTRACT-ADDRESS

# Or use Base mainnet (be careful with real transactions!)
ACP_RPC_URL=https://base.llamarpc.com
ACP_CHAIN_ID=8453
ACP_CONTRACT_ADDRESS=0xC6e864B52203da6593C83fD18E4c1212D088F61F

# ========================================
# Testing Configuration
# ========================================

# Enable mock buyer for automated testing
ENABLE_MOCK_BUYER=true
MOCK_BUYER_INTERVAL=30000

# Sandbox environment for testing
ENVIRONMENT=sandbox
NETWORK=base

# Detailed logging for debugging
LOG_LEVEL=debug
LOG_API_OUTPUT=true
ENABLE_TX_MONITORING=true

# Processing settings
ACP_PROCESSING_DELAY=3000
ACP_MAX_RETRIES=3
