{
  "name": "acp-integration-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for integrating AI agents with the Agent Commerce Protocol (ACP) on Virtuals",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:mock": "ENABLE_MOCK_BUYER=true tsx src/index.ts",
    "quickdeploy": "tsx src/quickDeploy.ts",
    "quickdeploy:build": "tsc && node dist/quickDeploy.js",
    "quickdeploy:mock": "ENABLE_MOCK_BUYER=true tsx src/quickDeploy.ts",
    "test": "jest",
    "test:quickdeploy": "tsx test-utils/testQuickDeploy.ts",
    "test:butler": "tsx test-utils/testButlerIntegration.ts",
    "test:butler:direct": "DIRECT_TEST=true tsx test-utils/testButlerIntegration.ts",
    "test:butler:scenarios": "tsx test-utils/testButlerIntegration.ts --scenarios",
    "test:mock-kc": "tsx test-utils/mockKosherCapital.ts",
    "test:integration": "npm-run-all -p test:mock-kc quickdeploy:mock",
    "test:acp-flow": "tsx tests/simulate-acp-flow.ts",
    "test:acp-flow:verbose": "LOG_LEVEL=debug tsx tests/simulate-acp-flow.ts",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "setup": "pnpm install && cp .env.example .env",
    "setup:quickdeploy": "pnpm install && cp .env.quickdeploy.example .env",
    "validate": "node scripts/validate-setup.js"
  },
  "keywords": [
    "ACP",
    "Agent Commerce Protocol",
    "Virtuals",
    "AI Agent",
    "Web3"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@virtuals-protocol/acp-node": "^0.2.0-beta.10",
    "@virtuals-protocol/game-acp-plugin": "^0.2.9",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.4",
    "express": "^4.18.2",
    "winston": "^3.17.0",
    "viem": "^2.28.2"
  },
  "optionalDependencies": {
    "@langchain/openai": "^0.0.14",
    "langchain": "^0.1.25",
    "@langchain/core": "^0.1.48"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}